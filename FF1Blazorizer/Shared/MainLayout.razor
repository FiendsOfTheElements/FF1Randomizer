				<br />
			</nav>
		</footer>
	</div>

	<div id="header">
		<div id="banner">
			<NavBanner />

			<div id="header-contents">
				<NavMenu ChaosTriggered="@TriggerChaos" />
				<UpdateNotification />
			</div>
		</div>
	</div>
</div>
@code
{
	bool showChaos { get; set; } = false;

	private void TriggerChaos(bool chaostriggered)
	{
		showChaos = chaostriggered;
		StateHasChanged();
	}

}
