@using System.Net.Http.Json
@inject HttpClient  Http
@page "/OldSplash"

<div id="welcome" class="content px-4">
	<h1>Final Fantasy Randomizer<br />Version @VersionString</h1>
	<div class="framed-content">
		<div class="is-dark nes-container">
			<a href="/Randomize" class="row main-menu-row">
				<div class="col-3"><i class="nes-logo"></i></div>
				<div class="col-9">Begin a New Game!</div>
			</a>
			<a href="/About" class="row main-menu-row">
				<div class="col-3"><i class="nes-icon star"></i></div>
				<div class="col-9">Help Me Get Started!</div>
			</a>
			<a href="https://discord.gg/5kTRT4AyvT" class="row main-menu-row">
				<div class="col-3"><i class="nes-icon"><span class="discord-logo" /></i></div>
				<div class="col-9">Final Fantasy 1 Randomizer Discord</div>
			</a>
			<a href="https://discord.gg/s7CRejk" class="row main-menu-row">
				<div class="col-3"><i class="nes-icon"><span class="discord-logo" /></i></div>
				<div class="col-9">FFR Developer's Discord</div>
			</a>
		</div>
	</div>
	<a href="https://en.wikipedia.org/wiki/George_Floyd" style="color: yellow; font-weight: bold; font-size: 24px">#icantbreathe</a>
</div>

@code {
	string VersionString = "";
	protected override void OnInitialized()
	{
		VersionString = FF1Lib.FFRVersion.Version;
		if (FF1Lib.FFRVersion.Branch == "dev")
		{
			VersionString += " Beta";
		}
		else if (FF1Lib.FFRVersion.Branch != "master")
		{
			VersionString += " " + FF1Lib.FFRVersion.Branch;
		}
		StateHasChanged();
	}
}
