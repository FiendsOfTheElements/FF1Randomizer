<Window x:Class="FF1Randomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF1Randomizer"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="580" Width="900">
	<Window.Resources>
		<local:FlagsToStringConverter x:Key="FlagsToStringConverter"/>
		<Style TargetType="CheckBox">
			<Setter Property="Margin" Value="10,5,0,0"/>
		</Style>
	</Window.Resources>
	<Grid Margin="0,0,0,0">
		<TextBox x:Name="RomTextBox" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
		<Label x:Name="RomLabel" Content="Original ROM" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
		<Button x:Name="RomButton" Content="Browse..." HorizontalAlignment="Left" Margin="135,36,0,0" VerticalAlignment="Top" Width="75" Click="RomButton_Click"/>
		<Label x:Name="SeedLabel" Content="Seed" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
		<TextBox x:Name="SeedTextBox" Text="{Binding Seed}" HorizontalAlignment="Left" Height="23" Margin="10,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<Button x:Name="GenerateButton" Content="Generate ROM" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="150" FontSize="20" IsEnabled="False" Click="GenerateButton_Click" Height="46"/>
		<Button x:Name="AboutButton" Content="About FF1 Randomizer" HorizontalAlignment="Right" Margin="0,61,10,0" VerticalAlignment="Top" Width="150" Height="24" Click="AboutButton_Click"/>
		<TextBox x:Name="FlagsTextBox" Text="{Binding Path=Flags, Converter={StaticResource FlagsToStringConverter}}" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="229,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="494"/>
		<Label x:Name="FlagsLabel" Content="Flags" HorizontalAlignment="Left" Margin="229,64,0,0" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="-0.359,0.486"/>
		<Label x:Name="PresetLabel" HorizontalAlignment="Left" Margin="278,64,0,0" VerticalAlignment="Top">
			<Hyperlink Click="LoadPreset">Load Preset...</Hyperlink>
		</Label>
		<Button x:Name="CopyButton" Content="Export" HorizontalAlignment="Left" Margin="728,90,0,0" VerticalAlignment="Top" Width="80" Height="23" Click="CopyButton_Click"/>
		<Button x:Name="PasteButton" Content="Import" HorizontalAlignment="Left" Margin="813,90,0,0" VerticalAlignment="Top" Width="62" Height="23" Click="PasteButton_Click"/>
		<Button x:Name="SeedButton" Content="New Seed" HorizontalAlignment="Left" Margin="135,90,0,0" VerticalAlignment="Top" Width="89" Height="23" Click="SeedButton_Click"/>
		<TabControl x:Name="tabControl" Margin="10,118,10,10">
			<TabItem Header="Shuffle">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="77*"/>
						<ColumnDefinition Width="19*"/>
						<ColumnDefinition Width="12*"/>
						<ColumnDefinition Width="132*"/>
						<ColumnDefinition Width="193*"/>
						<ColumnDefinition Width="87*"/>
						<ColumnDefinition Width="346*"/>
					</Grid.ColumnDefinitions>
					<StackPanel Orientation="Vertical" Grid.Column="0" Grid.ColumnSpan="6" Margin="0,0,72,0">
						<CheckBox x:Name="ShopsCheckBox" IsChecked="{Binding Flags.Shops}" IsThreeState="True" Content="Shops" ToolTip="Shop contents (other than magic) are shuffled."/>
						<CheckBox x:Name="RandomWaresCheckBox" IsChecked="{Binding Flags.RandomWares}" IsThreeState="True" IsEnabled="{Binding Flags.Shops}" Content="Random Weapons and Armor" ToolTip="Shop contents (other than magic) are shuffled." Margin="30,5,0,0"/>
						<CheckBox x:Name="IncludeCasterItemsCheckBox" IsChecked="{Binding Flags.RandomWaresIncludesSpecialGear}" IsEnabled="{Binding Flags.CanIncludeSpecialGear}" IsThreeState="True" Content="Including Caster Items and Elite Gear" ToolTip="Shuffled shops permits elite gear." Margin="30,5,0,0"/>
						<CheckBox x:Name="MagicShopsCheckBox" IsChecked="{Binding Flags.MagicShops}" IsThreeState="True" Content="Magic Shops" ToolTip="Magic shop contents are shuffled."/>
						<CheckBox x:Name="MagicLevelsCheckBox" IsChecked="{Binding Flags.MagicLevels}" IsThreeState="True" Content="Magic Levels" ToolTip="Magic spells have their levels shuffled."/>
						<CheckBox x:Name="MagicPermissionsCheckBox" IsChecked="{Binding Flags.MagicPermissions}" IsThreeState="True" IsEnabled="{Binding Flags.MagicLevels}" Content="Keep Permissions" ToolTip="Retain the permissions of spells, even if they're shuffled to lower levels." Margin="30,5,0,0"/>
						<CheckBox x:Name="ItemMagicCheckBox" IsChecked="{Binding Flags.ItemMagic}" IsThreeState="True" Content="Item Magic" ToolTip="Magic items have randomly assigned spells."/>
						<CheckBox x:Name="SpellcrafterCheckBox" IsChecked="{Binding Flags.GenerateNewSpellbook}" IsThreeState="True" Content="Generate New Spellbook" ToolTip="Generates a new spellbook with spells appropriate to their level placement."/>
						<CheckBox x:Name="SpellcrafterPermsCheckBox" IsChecked="{Binding Flags.SpellcrafterRetainPermissions}" IsThreeState="True" IsEnabled="{Binding Flags.GenerateNewSpellbook}" Content="Retain Old Permissions" ToolTip="Spell permissions are not altered, i.e. Red Mage has first and third slots of tier 3 white" Margin="30,5,0,0"/>
						<CheckBox x:Name="MixSpellcrafter" IsChecked="{Binding Flags.SpellcrafterMixSpells}" IsThreeState="True" IsEnabled="{Binding Flags.GenerateNewSpellbook}" Content="Mix Spellbooks" ToolTip="Mixes the spell families when spellcrafter is on." Margin="30,5,0,0"/>
						<Label Margin="5,5,0,0"/>
						<CheckBox x:Name="RngCheckBox" IsChecked="{Binding Flags.Rng}" Content="RNG Table" IsThreeState="True" ToolTip="Shuffle the RNG table so that encounters are more difficult to predict."/>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="5" Grid.ColumnSpan="2">
						<CheckBox x:Name="EnemyScriptsCheckBox" IsChecked="{Binding Flags.EnemyScripts}" IsThreeState="True" Content="Enemy Scripts" ToolTip="Enemy scripts are shuffled to different enemies."/>
						<CheckBox x:Name="AllowUnsafePiratesCheckBox" IsChecked="{Binding Flags.AllowUnsafePirates}" IsThreeState="True" IsEnabled="{Binding Flags.EnemyScripts}" Content="Allow Unsafe Pirates" ToolTip="Enemy scripts are shuffled to different enemies." Margin="30,5,0,0"/>
						<CheckBox x:Name="EnemySkillsSpellsCheckBox" IsChecked="{Binding Flags.EnemySkillsSpells}" IsThreeState="True" Content="Enemy Skills/Spells" ToolTip="Enemy skills and spells are shuffled to other scripts."/>
						<CheckBox x:Name="EnemyStatusAttacksCheckBox" IsChecked="{Binding Flags.EnemyStatusAttacks}" IsThreeState="True" Content="Enemy Status Attacks" ToolTip="Status attacks such as stun, sleep, and death are shuffled."/>
						<CheckBox x:Name="EnemyStatusAttacksRandomizedCheckBox" IsChecked="{Binding Flags.RandomStatusAttacks}" IsEnabled="{Binding Flags.EnemyStatusAttacks}" IsThreeState="True" Content="Randomize Status Attacks" ToolTip="Enemies roll random status attacks" Margin="30,5,0,0"/>
						<CheckBox x:Name="EnemyFormationsUnrunnableCheckBox" IsChecked="{Binding Flags.EnemyFormationsUnrunnable}" IsThreeState="True" Content="Enemy Unrunnable Formations" ToolTip="Enemy Unrunnable Formations"/>
						<CheckBox x:Name="AllFormationsUnrunnableCheckBox" IsChecked="{Binding Flags.EverythingUnrunnable}" IsEnabled="{Binding Flags.EnemyFormationsUnrunnable}" IsThreeState="True" Content="All Formations Are Unrunnable" ToolTip="All formations are unrunnable" Margin="30,5,0,0"/>
						<CheckBox x:Name="UnrunnablesCanStrikeFirstAndSurpriseBox" IsChecked="{Binding Flags.UnrunnablesStrikeFirstAndSurprise}" IsThreeState="True" Content="Unrunnables Can Ambush/Be Ambushed" ToolTip="Unrunnable formations can strike first or surprise"/>
						<CheckBox x:Name="EnemyFormationsSurpriseCheckBox" IsChecked="{Binding Flags.EnemyFormationsSurprise}" IsThreeState="True" Content="Enemy Surprise Bonus" ToolTip="Enemy Surprise Bonus"/>
						<ComboBox x:Name="EnemyFormationsComboBox" SelectedValue="{Binding Flags.FormationShuffleModeEnum}" Width="220" HorizontalAlignment="Left" Margin="10,5,0,0" SelectedValuePath="Tag">
							<ComboBoxItem Tag="None">Don't Shuffle Formations</ComboBoxItem>
							<ComboBoxItem Tag="Intrazone">Shuffle Frequency Within Zones</ComboBoxItem>
							<ComboBoxItem Tag="Interzone">Shuffle Formations Across Zones</ComboBoxItem>
							<ComboBoxItem Tag="Randomize">Randomize Formations</ComboBoxItem>
						</ComboBox>
						<CheckBox x:Name="EnemyTrapTilesCheckBox" IsChecked="{Binding Flags.EnemyTrapTiles}" IsThreeState="True" Content="Enemy Forced Encounter Tiles" ToolTip="Shuffle trap tile battles amongst one another."/>
						<CheckBox x:Name="RandomTrapFormationsCheckBox" IsChecked="{Binding Flags.RandomTrapFormations}" IsEnabled="{Binding Flags.EnemyTrapTiles}" IsThreeState="True" Content="Use Random Formations" ToolTip="Trap battles are instead selected at random from formation 2 battles." Margin="30,5,0,0"/>
						<CheckBox x:Name="EnemizerFormationsCheckBox" IsChecked="{Binding Flags.RandomizeFormationEnemizer}" IsThreeState="True" Content="Generate New Formations (Enemizer)" ToolTip="Generates new formations.  Turns off the ability to shuffle trap tiles or shuffle encounter zones."/>
						<CheckBox x:Name="EnemizerCheckBox" IsChecked="{Binding Flags.RandomizeEnemizer}" Content="Generate New Enemies (Enemizer)" IsEnabled="{Binding Flags.RandomizeFormationEnemizer}" IsThreeState="True" ToolTip="Generates new enemies procedurally.  Requires generating new formations in order to work." Margin="30,5,0,0"/>
						<ComboBox x:Name="WarMechModeComboBox" SelectedValue="{Binding Flags.WarMECHMode}" Width="220" HorizontalAlignment="Left" Margin="10,5,0,0" SelectedValuePath="Tag">
							<ComboBoxItem Tag="Vanilla">WarMECH Vanilla</ComboBoxItem>
							<ComboBoxItem Tag="Patrolling">WarMECH Patrolling</ComboBoxItem>
							<ComboBoxItem Tag="Required">WarMECH Required</ComboBoxItem>
							<ComboBoxItem Tag="Unleashed">WarMECH Unleashed</ComboBoxItem>
						</ComboBox>
					</StackPanel>
				</Grid>
			</TabItem>
			<TabItem Header="Treasures">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="239*"/>
						<ColumnDefinition Width="188*"/>
						<ColumnDefinition Width="51*"/>
						<ColumnDefinition Width="239*"/>
					</Grid.ColumnDefinitions>
					<StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,0.333,0">
						<Label Margin="5,5,0,0" FontWeight="Bold">Item Shuffle</Label>
						<CheckBox x:Name="TreasuresCheckBox" IsChecked="{Binding Flags.Treasures}" IsThreeState="True" Content="Treasures" ToolTip="If unchecked, forces vanilla Treasure Chests"/>
						<CheckBox x:Name="RandomTreasuresCheckBox" IsChecked="{Binding Flags.RandomTreasure}" IsThreeState="True" IsEnabled="{Binding Flags.Treasures}" Content="Randomize Treasures" Margin="30,5,0,0"/>
						<ComboBox x:Name="WorldWealthComboBox" SelectedValue="{Binding Flags.WorldWealthEnum}" IsEnabled="{Binding Flags.Treasures}" Width="120" HorizontalAlignment="Left" Margin="30,5,0,0" SelectedValuePath="Tag">
							<ComboBoxItem Tag="High">High Wealth</ComboBoxItem>
							<ComboBoxItem Tag="Normal">Normal Wealth</ComboBoxItem>
							<ComboBoxItem Tag="Low">Low Wealth</ComboBoxItem>
							<ComboBoxItem Tag="Impoverished">Impoverished</ComboBoxItem>
							<ComboBoxItem Tag="Melmond">Melmond</ComboBoxItem>
						</ComboBox>
						<CheckBox x:Name="BetterTrapTreasureCheckBox" IsChecked="{Binding Flags.BetterTrapTreasure}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Better Treasure near Spike Tiles" ToolTip="Better treasures on chests next to spike tile" Margin="30, 5, 0 0"/>
						<CheckBox x:Name="NPCItemsCheckBox" IsChecked="{Binding Flags.NPCItems}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Main NPC Items" ToolTip="If unchecked, forces vanilla Bridge, Lute, Ship, Rod, Canoe, Cube, Bottle"/>
						<CheckBox x:Name="NPCFetchItemsCheckBox" IsChecked="{Binding Flags.NPCFetchItems}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Fetch Quest Rewards" ToolTip="If unchecked, forces vanilla Crystal, Herb, Key, Canal, Oxyale, Chime, Xcalber"/>
						<CheckBox x:Name="ObjectiveNPCCheckBox" IsChecked="{Binding Flags.ObjectiveNPCs}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Objective NPCs" ToolTip="Shuffle the locations of Dr. Unne, Elf Doctor, and Bahamut"/>
						<Label Margin="5,5,0,0"/>
						<CheckBox x:Name="FreeShipCheckBox" IsChecked="{Binding Flags.FreeShip}" IsThreeState="True" Content="Free Ship" ToolTip="Start the game with a free ship in the Coneria dock."/>
						<CheckBox x:Name="FreeAirshipCheckBox" IsChecked="{Binding Flags.FreeAirship}" IsThreeState="True" Content="Free Airship" ToolTip="Start the game with a free airship, which spawns near Coneria."/>
						<CheckBox x:Name="FreeBridgeCheckBox" IsChecked="{Binding Flags.FreeBridge}" IsThreeState="True" Content="Free Bridge" ToolTip="The bridge near Coneria Castle is built at the start of the game."/>
						<CheckBox x:Name="FreeCanalCheckBox" IsChecked="{Binding Flags.FreeCanal}" IsThreeState="True" Content="Free Canal" ToolTip="The canal connecting the inner sea to the outer sea is available at the start of the game."/>
						<CheckBox x:Name="FreeTailCheckBox" IsChecked="{Binding Flags.FreeTail}" IsThreeState="True" Content="Free Tail" ToolTip="The rat's tail required for promotion is in your inventory at the start of the game."/>
						<Label Margin="5,5,0,0"/>
						<CheckBox x:Name="UseOlderPlacementCheckBox" IsChecked="{Binding Flags.ClassicItemPlacement}" Content="Use v2 logic for placing treasures" ToolTip="Uses an older version of the logic to place items"/>
						<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
							<Label >Consumable Treasurechest Stacks:</Label>
							<ComboBox SelectedValue="{Binding Flags.ConsumableTreasureStackSize}" MinWidth="100" HorizontalAlignment="Left" SelectedValuePath="Tag">
								<ComboBoxItem Tag="Default">Default</ComboBoxItem>
								<ComboBoxItem Tag="Stingy">Stingy</ComboBoxItem>
								<ComboBoxItem Tag="Adequat">Adequat</ComboBoxItem>
								<ComboBoxItem Tag="Generous">Generous</ComboBoxItem>
								<ComboBoxItem Tag="Ridiculous">Ridiculous</ComboBoxItem>
							</ComboBox>
						</StackPanel>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.ColumnSpan="3" Margin="239,0,0,0">
						<Label Margin="5,5,0,0" FontWeight="Bold">Incentivized Locations:</Label>
						<CheckBox x:Name="IncentivizeFreeNPCsCheckBox" IsChecked="{Binding Flags.IncentivizeFreeNPCs}" IsEnabled="{Binding Flags.IncentivizeFreeNPCsEnabled}" IsThreeState="True" Content="Main NPCs" ToolTip="King, Princess, Bikke, Sarda, Sage, Robot, Caravan"/>
						<CheckBox x:Name="IncentivizeFetchNPCsCheckBox" IsChecked="{Binding Flags.IncentivizeFetchNPCs}" IsEnabled="{Binding Flags.IncentivizeFetchNPCsEnabled}" IsThreeState="True" Content="Fetch Quest NPCs" ToolTip="Astos, Matoya, Prince, Dwarves, Lefein, Fairy"/>
						<Label Margin="5,5,0,0"/>
						<CheckBox x:Name="IncentivizeIceCaveCheckBox" IsChecked="{Binding Flags.IncentivizeIceCave}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Ice Cave" ToolTip="Floater chest"/>
						<CheckBox x:Name="IncentivizeOrdealsCheckBox" IsChecked="{Binding Flags.IncentivizeOrdeals}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Ordeals" ToolTip="Tail chest"/>
						<CheckBox x:Name="IncentivizeMarshCheckBox" IsChecked="{Binding Flags.IncentivizeMarsh}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Marsh Cave" ToolTip="Crown chest"/>
						<CheckBox x:Name="IncentivizeTitansCheckBox" IsChecked="{Binding Flags.IncentivizeTitansTrove}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Titan's Trove" ToolTip="One of the chests in the Titan's Cave"/>
						<Label Margin="5,5,0,0"/>
						<CheckBox x:Name="IncentivizeEarthCheckBox" IsChecked="{Binding Flags.IncentivizeEarth}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Earth Cave" ToolTip="Ruby chest (behind Vampire)"/>
						<CheckBox x:Name="IncentivizeVolcanoCheckBox" IsChecked="{Binding Flags.IncentivizeVolcano}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Volcano" ToolTip="Last Floor West (Red D)"/>
						<CheckBox x:Name="IncentivizeSeaShrineCheckBox" IsChecked="{Binding Flags.IncentivizeSeaShrine}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Sea Shrine" ToolTip="Slab chest"/>
						<CheckBox x:Name="IncentivizeSkyPalaceCheckBox" IsChecked="{Binding Flags.IncentivizeSkyPalace}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Sky Palace" ToolTip="Adamant chest"/>
						<Label Margin="5,5,0,0"/>
						<CheckBox x:Name="IncentivizeConeriaCheckBox" IsChecked="{Binding Flags.IncentivizeConeria}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Coneria (locked)" ToolTip="TNT chest"/>
						<CheckBox x:Name="IncentivizeMarshKeyLockedCheckBox" IsChecked="{Binding Flags.IncentivizeMarshKeyLocked}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Marsh (locked)" ToolTip="Bottom Floor South East"/>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="3" Margin="0,0,0.334,0">
						<Label Margin="5,5,0,0" FontWeight="Bold">Incentivized Item Pool:</Label>
						<CheckBox x:Name="IncentivizeMainProgressionCheckBox" IsChecked="{Binding Flags.IncentivizeMainItems}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Main Progression Items" ToolTip="Lute, Key, Rod, Oxyale, Chime, Cube"/>
						<CheckBox x:Name="IncentivizeFetchItemsCheckBox" IsChecked="{Binding Flags.IncentivizeFetchItems}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Other Quest Items" ToolTip="Any other non-required quest items that are shuffled such as Ruby or Adamant"/>
						<CheckBox x:Name="IncentivizeFloaterCheckBox" IsChecked="{Binding Flags.IncentivizeAirship}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Floater" ToolTip="Floater"/>
						<CheckBox x:Name="IncentivizeCanoeCheckBox" IsChecked="{Binding Flags.IncentivizeCanoeItem}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Canoe" ToolTip="Canoe"/>
						<CheckBox x:Name="IncentivizeShipCanalCheckBox" IsChecked="{Binding Flags.IncentivizeShipAndCanal}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Ship + Canal" ToolTip="Ship and Canal"/>
						<CheckBox x:Name="IncentivizeTailCheckBox" IsChecked="{Binding Flags.IncentivizeTail}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Tail" ToolTip="Tail"/>
						<CheckBox x:Name="IncentivizeMasamuneCheckBox" IsChecked="{Binding Flags.IncentivizeMasamune}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Masamune" ToolTip="Masamune"/>
						<CheckBox x:Name="IncentivizeDefCastWeaponCheckBox" IsChecked="{Binding Flags.IncentivizeDefCastWeapon}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Defense" ToolTip="Defense"/>
						<CheckBox x:Name="IncentivizeVorpalCheckBox" IsChecked="{Binding Flags.IncentivizeVorpal}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Vorpal" ToolTip="The Alleged Sword, or the Game Changer"/>
						<CheckBox x:Name="IncentivizeOffCastWeaponCheckBox" IsChecked="{Binding Flags.IncentivizeOffCastWeapon}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Thor Hammer" ToolTip="Thor Hammer"/>
						<CheckBox x:Name="IncentivizeOpalCheckBox" IsChecked="{Binding Flags.IncentivizeOpal}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Opal Bracelet" ToolTip="Opal Bracelet"/>
						<CheckBox x:Name="IncentivizeOtherCastArmorCheckBox" IsChecked="{Binding Flags.IncentivizeOtherCastArmor}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Power Gauntlet" ToolTip="Power Gauntlet"/>
						<CheckBox x:Name="IncentivizePowerRodCheckBox" IsChecked="{Binding Flags.IncentivizePowerRod}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Power Rod" ToolTip="Power Rod"/>
						<CheckBox x:Name="IncentivizeDefCastArmorCheckBox" IsChecked="{Binding Flags.IncentivizeDefCastArmor}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="White Shirt" ToolTip=">White Shirt"/>
						<CheckBox x:Name="IncentivizeOffCastArmorCheckBox" IsChecked="{Binding Flags.IncentivizeOffCastArmor}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Black Shirt" ToolTip="Black Shirt"/>
						<CheckBox x:Name="IncentivizeRibbonCheckBox" IsChecked="{Binding Flags.IncentivizeRibbon}" IsEnabled="{Binding Flags.Treasures}" IsThreeState="True" Content="Ribbon" ToolTip="Ribbon"/>
					</StackPanel>
				</Grid>
			</TabItem>
			<TabItem Header="Goal">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<StackPanel Orientation="Vertical" Grid.Column="0">
						<Label Margin="5,5,0,0" FontWeight="Bold">Quick Races</Label>
						<CheckBox x:Name="ChaosRushCheckBox" IsChecked="{Binding Flags.ChaosRush}" IsEnabled="{Binding Flags.ChaosRushEnabled}" Content="CHAOS Rush" ToolTip="Enable access to CHAOS without the Mystic KEY and start with the LUTE."/>
						<CheckBox x:Name="FreeOrbsCheckBox" IsChecked="{Binding Flags.FreeOrbs}" IsEnabled="{Binding Flags.FreeOrbsEnabled}" Content="Free Orbs" ToolTip="Enable access to CHAOS without the Mystic KEY and start with the LUTE."/>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="1">
						<Label Margin="5,5,0,0" FontWeight="Bold">Treasure Hunt</Label>
						<CheckBox x:Name="ShardHuntCheckBox" IsChecked="{Binding Flags.ShardHunt}" IsEnabled="{Binding Flags.ShardHuntEnabled}" Content="Treasure Hunt" ToolTip="Treasure Hunt alternate gameplay mode. Collect 16 of a random Treasure Item to activate the BLACK ORB."/>
						<ComboBox x:Name="ShardCountComboBox" SelectedValue="{Binding Flags.ShardCount}" IsEnabled="{Binding Flags.ShardHuntEnabled}" Width="120" HorizontalAlignment="Left" Margin="30,5,0,0" SelectedValuePath="Tag">
							<ComboBoxItem Tag="Count16">Exactly 16</ComboBoxItem>
							<ComboBoxItem Tag="Count20">Exactly 20</ComboBoxItem>
							<ComboBoxItem Tag="Count24">Exactly 24</ComboBoxItem>
							<ComboBoxItem Tag="Count28">Exactly 28</ComboBoxItem>
							<ComboBoxItem Tag="Count32">Exactly 32</ComboBoxItem>
							<ComboBoxItem Tag="Count36">Exactly 36</ComboBoxItem>
							<ComboBoxItem Tag="Range16_24">From 16-24</ComboBoxItem>
							<ComboBoxItem Tag="Range24_32">From 24-32</ComboBoxItem>
							<ComboBoxItem Tag="Range16_36">From 16-36</ComboBoxItem>
						</ComboBox>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="2">
						<Label Margin="5,5,0,0" FontWeight="Bold">Extra Challenges</Label>
						<CheckBox x:Name="TransformFinalFormationCheckBox" IsChecked="{Binding Flags.TransformFinalFormation}" IsThreeState="True" Content="Alternate Final Boss" ToolTip="Replace the Final Battle against Chaos with a different challenge."/>
						<CheckBox x:Name="ShortenToFRCheckBox" IsChecked="{Binding Flags.ShortToFR}" IsThreeState="True" Content="Shorten ToFR" ToolTip="Squash ToFR down into its final floor with all treasures."/>
						<CheckBox x:Name="PreserveFiendRefightsCheckBox" IsEnabled="{Binding Flags.ShortToFR}" IsChecked="{Binding Flags.PreserveFiendRefights}" IsThreeState="True" Content="Preserve Fiend Tiles" ToolTip="Add four fiend tiles to the shortened ToFR."/>
					</StackPanel>
				</Grid>
			</TabItem>
			<TabItem Header="Map">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0">
						<Label Margin="5,5,0,0" FontWeight="Bold">Entrance Shuffle</Label>
						<CheckBox x:Name="EntrancesCheckBox" IsChecked="{Binding Flags.Entrances}" IsThreeState="True" Content="Entrances" ToolTip="Overworld entrances now lead to random dungeons."/>
						<CheckBox x:Name="IncludeDeadEndsCheckBox" IsChecked="{Binding Flags.EntrancesIncludeDeadEnds}" IsEnabled="{Binding Flags.Entrances}" IsThreeState="True" Content="Include Dead Ends" ToolTip="" Margin="30, 5, 0, 0"/>
						<CheckBox x:Name="FloorsCheckBox" IsEnabled="{Binding Flags.Entrances}" IsChecked="{Binding Flags.Floors}" IsThreeState="True" Content="Floors" ToolTip="All rooms are shuffled up into new sequences, intermixed across the entrances." Margin="30,5,0,0"/>
						<CheckBox x:Name="DeepToFRCheckBox" IsEnabled="{Binding Flags.DeepCastlesPossible}" IsChecked="{Binding Flags.AllowDeepCastles}" IsThreeState="True" Content="Deep ToFR" ToolTip="Instead of being at ground level, the Temple of Fiends can now be at the bottom of a dungeon." Margin="30,5,0,0"/>
